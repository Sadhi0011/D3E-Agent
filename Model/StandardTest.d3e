(Model StandardTest {
    name 'Standard Test'
    
    master #Company
    package 'rewa.hr.2'
    properties [
        (name {
            name 'Name'
            type ({
                primitive String
            })
            required true
        })
        (testOutcome {
            name 'Test Outcome'
            type ({
                optionSet #InterviewOutcomeType
            })
        })
        (maxScore {
            name 'Max Score'
            type ({
                primitive Integer
            })
        })
        (description {
            name 'Description'
            type ({
                primitive String
            })
            longText true
        })
        (attachments {
            name 'Attachments'
            collection true
            type ({
                primitive DFile
            })
        })
        (addedBy {
            name 'AddedBy'
            type ({
                model #Employee
            })
        })
    ]
    actions [
        (CreatedStandardTestUser {
            runOn OnCreateAndUpdate
            name 'Created Standard Test User'
            block ```
                 EndUser user = CurrentUser.get() as EndUser;
                    this.addedBy = user.employee;
                    Database.save(this);
            ```
        })
    ]
})