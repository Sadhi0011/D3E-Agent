Model {
    name 'Payroll Account'
    master Company
    properties [
        {
            name 'Account Number'
            type String
            validations [
                ({
                    expression `accountNumber.length < 30 && RegExp(r'^[-+]?[0-9]+$').hasMatch(it)`
                    errorMsg 'AccountNumber should not exceeds 30 characters && Should be a valid number'
                })
            ]
            required true
        }
        {
            name 'Bank Name'
            type String
            required true
        }
        {
            name 'Branch Name'
            type String
            required true
        }
        {
            name 'ifscCode'
            type String
            required true
        }
        {
            name 'Account Holder Name'
            type String
            required true
        }
        {
            name 'Account Type'
            type AccountType
        }
        {
            name 'Client Code'
            type String
            required true
        }
        {
            name 'Product Code'
            type String
            required true
            defaultValue `'VPAY'`
        }
    ]
}