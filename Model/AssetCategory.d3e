(Model AssetCategory {
    name 'Asset Category'
    
    master #Company
    package 'rewa.hr.2'
    properties [
        (name {
            name 'Name'
            type ({
                primitive String
            })
            required true
            unique true
        })
        (categoryID {
            name 'Category ID'
            type ({
                primitive String
            })
            unique true
            required true
            validations [
                ({
                    errorMsg 'Allows numbers and only + - / ( )'
                    expression `it.isEmpty || it == '' || RegExp(r'(\+?([ ()-+]|[0-9])+)$').hasMatch(it)`
                })
            ]
        })
    ]
    display `this.name`
    actions [
        (categoryNextId {
           name 'categoryNextId'
           block ```
                this.company.assetCategoryNumber = company.assetCategoryNumber+1;
                Database.save(company);
           ```
         })
        
    ]
})