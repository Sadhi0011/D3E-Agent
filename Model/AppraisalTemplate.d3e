(Model AppraisalTemplate {
    name 'Appraisal Template'
    master #Company
    package 'rewahr.com'
    properties [
        (name {
            name 'Name'
            type ({
                primitive String
            })
        })
        (description {
            name 'Description'
            type ({
                primitive String
            })
            longText true
        })
        (default {
            name 'Default'
            type ({
                primitive Boolean
            })
        })
        (includeAttachmentsSection {
            name 'Include Attachments Section'
            type (Boolean {
                primitive Boolean
            })
        })
        (header {
            name 'Header'
            type ({
                primitive String
            })
            longText true
        })
        (sections {
            name 'Sections'
            collection true
            type ({
                model #AppraisalFormSecion
            })
        })
    ]
    display `name`
})