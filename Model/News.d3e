(Model News {
    name 'News'
    master #Company
    package 'rewa.hr.2'
    allowDynamicReport true
    properties [
        (topic {
            name 'Topic'
            type ({
                primitive String
            })
            required true
        })
        (description {
            name 'Description'
            type ({
                primitive String
            })
            longText true
        })
        (requestAcknowledgment {
            name 'Request Acknowledgment'
            type ({
                primitive Boolean
            })
        })
        (attachments {
            name 'Attachments'
            collection true
            type ({
                primitive DFile
            })
            needAllChildren false
        })
        (allRoles {
            name 'All Roles'
            type ({
                primitive Boolean
            })
        })
        (userRoles {
            name 'User Roles'
            collection true
            type ({
                model #UserRole
            })
            needAllChildren false
        })
        (employees {
            name 'Employees'
            collection true
            type ({
                model #Employee
            })
            needAllChildren false
        })
        (allLocations {
            name 'All Locations'
            type ({
                primitive Boolean
            })
        })
        (locations {
            name 'Locations'
            collection true
            type ({
                model #Location
            })
            needAllChildren false
        })
        (employmentStatus {
            name 'Employment Status'
            collection true
            type ({
                model #EmploymentStatus
            })
            needAllChildren false
        })
        (jobTitles {
            name 'Job Titles'
            collection true
            type ({
                model #JobTitle
            })
            needAllChildren false
        })
        (subUnits {
            name 'Sub Units'
            collection true
            type ({
                model #SubUnit
            })
            needAllChildren false
        })
        (publishedDate {
            name 'Published Date'
            type ({
                primitive Date
            })
        })
        (status {
            name 'Status'
            type ({
                optionSet #DocumentStatus
            })
        })
    ]
    actions [
        (ModelAction sendEmailOnNewsCreate {
            runOn OnCreate
            block ```
                EmailContext repl = EmailContext(Map.fromIterables([
                    'topic'
                ], [
                    topic
                ]));

                employees.forEach((e) {
                    NotificationHelper.sendActionBasedEmails(
                        PublishNewsNotification,
                        repl,
                        e,
                        Archived,
                        EmailNotificationUtil.getDocumentState(this.status),
                    );
                });
            ```
        })
    ]
})