(Model JobTitle {
    name 'Job Title'
    master #Company
    allowDynamicReport true
    package 'rewahr.com'
    properties [
        (name {
            name 'Name'
            type ({
                primitive String
            })
            required true
            unique true
            validations [
                ({
                    expression `name.length < 50`
                    errorMsg 'Job tilte should not exceeds 50 characters'
                })
            ]
        })
        (description {
            name 'Description'
            type ({
                primitive String
            })
            longText true
        })
        (specification {
            name 'Specification'
            type ({
                primitive DFile
            })
        })
        (notes {
            name 'Notes'
            type ({
                primitive String
            })
            longText true
        })
        (parent {
            name 'Parent'
            type ({
                model #JobTitle
            })
        })
        (active {
            type ({
                primitive Boolean
            })
            defaultValue `true`
        })
    ]
    display `this.name`
})