(Model Shortcut {
    name 'Shortcut'
    
    master #EndUser
    package 'rewa.hr.2'
    properties [
        (name {
            name 'Name'
            type ({
                primitive String
            })
            required true
        })
        (shortcutType {
            name 'Shortcut Type'
            type ({
                optionSet #ShortcutType
            })
        })
        (employeeFilter {
            type ({
                model #EmployeeShortcut
            })
            child true
            existsIf `shortcutType == Employees`
        })
        (leaveFilter {
            type ({
                model #LeaveShorcut
            })
            child true
            existsIf `shortcutType == LeaveCalendar`
        })
        (appraisalFilter {
            type ({
                model #AppraisalShortcut
            })
            child true
            existsIf `shortcutType == Appraisals`
        })
        (goalFilter {
            type ({
                model #GoalsShorcut
            })
            child true
            existsIf `shortcutType == Goals`
        })
    ]
    actions [
    ]
})