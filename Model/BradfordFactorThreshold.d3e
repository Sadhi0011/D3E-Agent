(Model BradfordFactorThreshold {
    name 'Bradford Factor Threshold'
    
    master #Company
    package 'rewa.hr.2'
    properties [
        (threshold {
            name 'Threshold'
            type ({
                primitive String
            })
            validations [
                ({
                    errorMsg ' Should be a valid number '
                    expression `it.isEmpty || it == '' || RegExp(r'^[-+]?[0-9]+$').hasMatch(it)`
                })
            ]
            required true
        })
        (name {
            name 'Name'
            type ({
                primitive String
            })
            required true
        })
    ]
})