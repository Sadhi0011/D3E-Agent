(Model WorkShift {
    name 'Work Shift'
    allowDynamicReport true
    master #Company
    package 'rewa.hr.2'
    properties [
        (name {
            name 'Name'
            type ({
                primitive String
            })
            required true
        })
        (hoursPerDay {
            name 'Hours Per Day'
            type ({
                primitive Duration
            })
            readType ReadOnly
            computed true
            computation `HRMCSUtils.getPerdayDurationFromWorkShift(this)`
        })
        (from {
            name 'From'
            type ({
                primitive Time
            })
            required true
        })
        (to {
            name 'To'
            type ({
                primitive Time
            })
            required true
        })
        (default {
            type ({
                primitive Boolean
            })
        })
    ]
})