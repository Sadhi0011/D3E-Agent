(Model EmployeeTermination {
    name 'Employee Termination'
    package 'rewa.hr.2'
    allowDynamicReport true
    master #Employee
    properties [
        (reason {
            name 'Reason'
            type ({
                model #TerminationReason
            })
            required true
        })
        (date {
            name 'Date'
            type ({
                primitive Date
            })
            required true
        })
        (note {
            name 'Note'
            type ({
                primitive String
            })
            longText true
        })
    ]
    actions [
        (onEmployeeTurminate {
            block ```
                // make employee status false
                this.employee.status = false;
                Database.save(employee);
            ```
        })
    ]
})