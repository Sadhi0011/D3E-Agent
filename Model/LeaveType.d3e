Model {
    package 'rewa.hr.2'
    name 'Leave Type'
    master Company
    properties [
        {
            name 'Name'
            type String
            required true
        }
        {
            name 'Is Entitlement Situational'
            type Boolean
        }
        {
            name 'General'
            type LeaveRuleGeneral
            child true
        }
        {
            name 'Employee Groups'
            collection true
            type LeaveRuleGroup
            child true
        }
        {
            name 'Who Can Apply'
            type LeaveRuleWhoCanApply
            child true
        }
        {
            name 'Restrictions'
            collection true
            type LeaveRuleRestrictions
            child true
        }
        {
            name 'Country'
            type String
            required true
        }
        {
            name 'Included In Bradfactor Report'
            type Boolean
        }
        {
            name 'Nominate Employee'
            type Boolean
        }
        {
            name 'Is Universal PTO Type'
            type Boolean
        }
        {
            name 'Is Monthly Accrual'
            type Boolean
            existsIf `isUniversalPTOType`
        }
        {
            name 'Entitlements'
            type Integer
            existsIf `isMonthlyAccrual`
        }
    ]
    display `name`
}