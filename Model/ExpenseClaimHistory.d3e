(Model ExpenseClaimHistory {
    name 'Expense Claim History'
    
    master #Company
    package 'rewa.hr.2'
    properties [
        (expenseClaim {
            type ({
                model #ExpenseClaim
            })
            required true
        })
        (performedBy {
            type ({
                model #EndUser
            })
            required true
        })
        (comment {
            type ({
                primitive String
            })
            longText true
        })
        (claimStatus {
            name 'Claim Status'
            type ({
                optionSet #ExpenseClaimStatus
            })
        })
    ]
    needCreatedDate true
})