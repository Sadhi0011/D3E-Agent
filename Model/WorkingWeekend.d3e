(Model WorkingWeekend {
    name 'Working Weekend'
    
    master #Company
    package 'rewahr.com'
    properties [
        (name {
            name 'Name'
            type ({
                primitive String
            })
            required true
        })
        (date {
            name 'Date'
            type ({
                primitive Date
            })
            required true
        })
        (fullHalfDay {
            name 'Full Half Day'
            type ({
                optionSet #DayCycle
            })
        })
        (country {
            name 'Country'
            type ({
                primitive String
            })
            required true
        })
        (locations {
            name 'Locations'
            collection true
            type ({
                model #Location
            })
            required true
            needAllChildren false
            referenceFrom `this.company.locations`
        })
    ]
})